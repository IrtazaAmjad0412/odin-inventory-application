<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="item-list">
      <% items.forEach((item) => { %>
      <div class="item-card">
        <h2><%= item.name %></h2>
        <a href="/categories/<%= categoryId %>/items/<%= item.id %>/edit">Edit</a>
        <form
          action="/categories/<%= categoryId %>/items/<%= item.id %>/delete"
          method="post"
        >
          <button type="submit">Delete</button>
        </form>
      </div>
      <% }) %>
    </div>
    <a href="/categories/<%= categoryId %>/items/new">Add a new item</a>
    <a href="/categories">Back to Categories</a>
  </body>
</html>
